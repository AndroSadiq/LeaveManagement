<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:gravity="center">

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_gravity="center">


        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="15dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:layout_marginRight="5dp"
                android:background="@drawable/dialog_layout_bg"
                android:elevation="0dp"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="30dp"
                android:paddingBottom="-50dp">

                <EditText
                    android:id="@+id/edt_sene_annou"
                    android:layout_width="200dp"
                    android:layout_height="200dp"
                    android:layout_marginTop="20dp"
                    android:gravity="start"
                    android:padding="10dp"
                    android:background="@drawable/edit_lay_bg"
                    android:textSize="17sp" />

                    <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_send_annou"
                    android:layout_width="200dp"
                    android:layout_height="60dp"
                    android:theme="@style/Widget.MaterialComponents.Button"
                    android:layout_marginTop="20dp"
                    android:text="Send"
                    android:textAllCaps="false"
                    android:textColor="#000"
                    android:textSize="17sp"
                    app:backgroundTint="#FF9800"
                    app:strokeWidth="1dp"
                    app:strokeColor="@color/colorBlack"
                    app:cornerRadius="20dp"
                    app:rippleColor="@color/colorBlack"
                        />


            </LinearLayout>

        </FrameLayout>

        <ImageButton
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_gravity="top|end"
            android:clickable="true"
            android:layout_margin="10dp"
            android:background="@android:color/transparent"
            android:src="@drawable/closebutton"
            android:id="@+id/iv_close"/>

    </FrameLayout>
</FrameLayout>
