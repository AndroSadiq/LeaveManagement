<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:gravity="center">

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_gravity="center">


        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="15dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:layout_marginRight="5dp"
                android:background="@drawable/dialog_layout_bg"
                android:elevation="0dp"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="30dp"
                android:paddingBottom="-50dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Enter Employee Username"
                    android:textSize="17sp"
                    android:textStyle="bold"
                    android:textColor="@color/colorBlack"/>
                 <EditText
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/edt_enter_emp_username"
                        android:textSize="17sp"
                     android:layout_marginTop="20dp"
                        android:background="@drawable/edit_lay_bg"
                        android:textCursorDrawable="@drawable/cursur"
                        android:padding="9dp"
                        android:textColor="#000"
                        android:singleLine="true"
                        android:maxLength="10"
                        />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_add_emp"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:textAllCaps="false"
                    android:text="Add Employee"
                    android:textColor="#000"
                    android:textSize="17sp"
                    android:theme="@style/Widget.MaterialComponents.Button"
                    app:backgroundTint="#FF9800"
                    app:cornerRadius="20dp"
                    app:rippleColor="@color/colorBlack"
                    app:strokeColor="@color/colorBlack"
                    app:strokeWidth="1dp" />


            </LinearLayout>

        </FrameLayout>

        <ImageButton
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_gravity="top|end"
            android:clickable="true"
            android:layout_margin="10dp"
            android:background="@android:color/transparent"
            android:src="@drawable/closebutton"
            android:id="@+id/iv_close"/>

    </FrameLayout>
</FrameLayout>
