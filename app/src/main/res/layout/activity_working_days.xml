<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Admin.WorkingDaysActivity"
    android:background="#F3CF89">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="top|center"
        android:background="@drawable/layout_border">
            <androidx.appcompat.widget.Toolbar
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/toolbar_working_days"
                app:title="Working Days">

            </androidx.appcompat.widget.Toolbar>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/colorBlack"/>

    </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="100dp">
            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/chk_mon"
                android:text="Monday"
                android:checked="true"
                android:paddingLeft="10dp"
                android:textSize="20sp"
                android:theme="@style/checkBoxColor"/>
            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/chk_tue"
                android:checked="true"
                android:text="Tuesday"
                android:layout_marginTop="20dp"
                android:paddingLeft="10dp"
                android:textSize="20sp"
                android:theme="@style/checkBoxColor"/>
            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/chk_wed"
                android:text="Wednesday"
                android:checked="true"
                android:layout_marginTop="20dp"
                android:paddingLeft="10dp"
                android:textSize="20sp"
                android:theme="@style/checkBoxColor"/>
            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/chk_thu"
                android:text="Thursday"
                android:checked="true"
                android:layout_marginTop="20dp"
                android:paddingLeft="10dp"
                android:textSize="20sp"
                android:theme="@style/checkBoxColor"/>
            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/chk_fri"
                android:text="Friday"
                android:checked="true"
                android:layout_marginTop="20dp"
                android:paddingLeft="10dp"
                android:textSize="20sp"
                android:theme="@style/checkBoxColor"/>
            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/chk_sat"
                android:text="Saturday"
                android:checked="true"
                android:layout_marginTop="20dp"
                android:paddingLeft="10dp"
                android:textSize="20sp"
                android:theme="@style/checkBoxColor"/>
            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/chk_sun"
                android:text="Sunday"
                android:checked="true"
                android:layout_marginTop="20dp"
                android:paddingLeft="10dp"
                android:layout_marginBottom="10dp"
                android:textSize="20sp"
                android:theme="@style/checkBoxColor"/>

        </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="bottom"
        android:background="@drawable/layout_border">
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/colorBlack"/>
        <com.google.android.material.button.MaterialButton
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:id="@+id/btn_save_working_days"
            android:theme="@style/Widget.MaterialComponents.Button"
            app:backgroundTint="#00000000"
            android:textColor="@color/colorBlack"
            android:text="Save"
            android:textSize="17sp"
            app:rippleColor="@color/colorBlack"
            app:strokeWidth="1dp"
            android:textAllCaps="false"
            app:strokeColor="@color/colorBlack"
            app:cornerRadius="4dp"
            android:layout_marginTop="2dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"/>

    </LinearLayout>
</FrameLayout>

